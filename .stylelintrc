{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": "tab",
        "at-rule-empty-line-before": null,
        "at-rule-no-unknown": [
            true, {
                "ignoreAtRules": ["function", "if", "each", "include", "mixin", "else"]
            }
        ]
    }
}